    <h1>Editing Book</h1>
    <%= form_with model: @edit, method: :patch do |f| %>

    <% if @edit.errors.any? %>
      <%= @edit.errors.count %> error prohibited this book from being saved:
      <ul>
        <% @edit.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <label>Body</label>
      <%= f.text_area :body %>
    </div>

    <div class="actions">
      <%= f.submit 'Update Book' %>
    </div>

      <%= link_to "Show", book_path(@edit.id) %> | <%= link_to "Back", "/books" %>
    <% end %>